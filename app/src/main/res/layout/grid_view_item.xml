<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="148dp"
        android:layout_height="223dp"
        android:layout_marginTop="8dp"
        android:background="@color/bgColor"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/thumbnailImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/bgColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/book_cover_137" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sfprodisplay_bold"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/titleText"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:text="The Truman Story" />

    <TextView
        android:id="@+id/authorBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sfprodisplay_regular"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/authorText"
        app:layout_constraintEnd_toEndOf="@+id/titleBook"
        app:layout_constraintStart_toStartOf="@+id/titleBook"
        app:layout_constraintTop_toBottomOf="@+id/titleBook"
        tools:text="Alsiher Navoiy" />

    <ImageView
        android:id="@+id/raiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/authorBook"
        app:layout_constraintStart_toStartOf="@+id/authorBook"
        app:layout_constraintTop_toBottomOf="@+id/authorBook"
        app:srcCompat="@drawable/ic_five_star" />

</androidx.constraintlayout.widget.ConstraintLayout>